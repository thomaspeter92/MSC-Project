// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  first_name String
  last_name  String
  email      String    @unique
  username   String    @unique
  created_at DateTime  @default(now())
  age        Int
  verified   Boolean   @default(false)
  sex        Sex
  Profile    Profile[]
  picture    String?
}

enum Sex {
  m //male
  f //female
  o //other
  tm
  tf
  nb
}

model Profile {
  id          Int     @id @default(autoincrement())
  user_id     Int     @unique
  user        User    @relation(fields: [user_id], references: [id]) // This establishes the relation
  smokes      String?
  status      String?
  orientation String?
  body_type   String?
  diet        String?
  drinks      String?
  drugs       String?
  education   String?
  height      String?
  job         String?
  location    String?
  offspring   String?
  pets        String?
  religion    String?
  speaks      String?
  essay0      String?
  essay1      String?
  essay2      String?
  essay3      String?
  essay4      String?
  essay5      String?
  essay6      String?
  essay7      String?
  essay8      String?
  essay9      String?
}
